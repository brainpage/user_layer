      script
	    | var r = Raphael("line-holder");
	    | r.linechart(20, 10, 240,120, [9,10,11,12,13, 14],[10,20,5,20,17, 12], { axis: "0 0 1 1",  smooth: true });

    .b.c8
      .p.f11 Time on applications
