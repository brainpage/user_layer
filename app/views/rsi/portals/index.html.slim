.row-fluid
  .span6
    .title 
      = link_to "Updates", rsi_portals_path, :class => "active"
    ul.feeds
      - for feed in @feeds 
        li.row-fluid
          .span2.feed-icon
              = image_tag "#{feed.text_key}.png"
          .span10
            .content =feed.text
            .sub 
              = send feed.hook_method, feed
              span =time_ago_in_words(feed.created_at) 
              
  .span3
    .title 
      = link_to "Analysis"

    .b.c8
      .p.f11 
        = link_to "Work strength of day"
